<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="rabbitConnectionFactory" class="com.asura.framework.rabbitmq.connection.RabbitConnectionFactory"
          init-method="init" destroy-method="closeConnection"/>

    <bean id="rabbitSendClient" class="com.asura.framework.rabbitmq.send.RabbitMqSendClient" destroy-method="closeChannel">
        <property name="rabbitConnectionFactory" ref="rabbitConnectionFactory"/>
    </bean>


    <bean id="sampleMessageLitener" class="com.asura.framework.rabbitmq.SampleMessageLitener"/>
    <bean id="sampleMessageLitener2" class="com.asura.framework.rabbitmq.SampleMessageLitener2"/>


    <bean id="sampleWorkerRec" class="com.asura.framework.rabbitmq.receive.RabbitMqReceive"
          init-method="consumerQueueMessage">
        <constructor-arg index="0">
            <ref bean="rabbitConnectionFactory"/>
        </constructor-arg>
        <constructor-arg index="1">
            <ref bean="sampleMessageLitener"/>
        </constructor-arg>
        <constructor-arg index="2">
            <value>dayu_003</value>
        </constructor-arg>
    </bean>


    <bean id="sampleWorker2Rec" class="com.asura.framework.rabbitmq.receive.RabbitMqReceive"
          init-method="consumerQueueMessage">
        <constructor-arg index="0">
            <ref bean="rabbitConnectionFactory"/>
        </constructor-arg>
        <constructor-arg index="1">
            <ref bean="sampleMessageLitener2"/>
        </constructor-arg>
        <constructor-arg index="2">
            <value>dayu_004</value>
        </constructor-arg>
    </bean>


</beans>